<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/EstiloPA1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            style="@style/TituloFragment"
            android:text="Conversión Hexadecimal → Binario" />

        <!-- Descripción -->
        <TextView
            style="@style/TextoPA1"
            android:text="4.	Convertir un numero de base 16 a binario."
            android:layout_marginBottom="24dp"
            android:justificationMode="inter_word" />

        <!-- Input hexadecimal -->
        <EditText
            android:id="@+id/etHexadecimal"
            style="@style/InputPA1"
            android:hint="Ingrese número hexadecimal"
            android:digits="0123456789ABCDEFabcdef"
            android:inputType="textCapCharacters" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnConvertir"
                style="@style/BotonPA1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Convertir" />

            <Button
                android:id="@+id/btnLimpiar"
                style="@style/BotonPA1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Resultado -->
        <TextView
            android:id="@+id/tvResultado"
            style="@style/TextoPA1"
            android:text="Resultado: "
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="#F5F5F5" />

    </LinearLayout>
</ScrollView>